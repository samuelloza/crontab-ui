<!-- Job -->
<div class="modal fade" id="job">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="job-title">Tarea</h4>
      </div>
      <div class="modal-body" id="job-body">
	<label>Nombre (Opcional)</label>
	<input type='text' class='form-control' id='job-name'/><br />
	<label>Comando</label>
	<input type='text' class='form-control' id='job-command' onkeyup="job_command = $(this).val(); job_string();"/><br />
	<label>Programación Rápida</label><br />
	<a class="btn btn-primary" onclick="schedule = '@reboot'; job_string();">Inicio</a>
	<a class="btn btn-primary" onclick="schedule = '@hourly'; job_string();">Cada Hora</a>
	<a class="btn btn-primary" onclick="schedule = '@daily'; job_string();">Diario</a>
  <a class="btn btn-primary" onclick="schedule = '@weekly'; job_string();">Semanal</a>
	<a class="btn btn-primary" onclick="schedule = '@monthly'; job_string();">Mensual</a>
	<a class="btn btn-primary" onclick="schedule = '@yearly'; job_string();">Anual</a><br /><br />

	<div class="row">
		<div class="col-md-2">Minuto</div>
		<div class="col-md-2">Hora</div>
		<div class="col-md-2">Día</div>
		<div class="col-md-2">Mes</div>
		<div class="col-md-2">Semana</div>
	</div>
	<div class="row">
		<div class="col-md-2"><input type="text" class="form-control" id="job-minute" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-hour" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-day" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-month" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-week" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><a class="btn btn-primary" onclick="set_schedule();">Establecer</a></div>
	</div>

	<br />
	<br />
	<label>Job</label>
	<input type='text' class='form-control' id='job-string' disabled='disabled'/><br />
	<label><input type="checkbox" id="job-logging" style="position:relative;top:2px"/> Habilitar registro de errores.</label><br />
	<a class="btn btn-primary btn-small" data-json="{}" onclick="setMailConfig(this);" id="job-mailing">Correo</a>
	<a class="btn btn-primary btn-small" data-json="{}" onclick="setHookConfig(this);">Hooks</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="job-save">Guardar</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="popup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modal-title">Mensaje</h4>
      </div>
      <div class="modal-body" id="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="modal-close-button">Cerrar</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-button">Ok</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="info-popup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="info-title">Mensaje</h4>
      </div>
      <div class="modal-body" id="info-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="info-button">Ok</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
